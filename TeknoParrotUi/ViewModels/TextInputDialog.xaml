<UserControl x:Class="TeknoParrotUi.ViewModels.TextInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeknoParrotUi.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="16">
        <TextBlock Text="{Binding Path=Message, FallbackValue='Message Here'}" 
                   HorizontalAlignment="Center" 
                   Margin="8"
                   FontSize="16" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="8">
            <Button Command="materialDesign:DialogHost.CloseDialogCommand"
                    IsCancel="True"
                    Content="{Binding Path=NegativeButtonText, FallbackValue='CANCEL'}"
                    Style="{StaticResource MaterialDesignFlatButton}">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">False</system:Boolean>
                </Button.CommandParameter>
            </Button>

            <Button Command="materialDesign:DialogHost.CloseDialogCommand"
                    IsDefault="True"
                    Content="{Binding Path=AffirmativeButtonText, FallbackValue='OK'}"
                    Margin="8, 0, 0, 0"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">True</system:Boolean>
                </Button.CommandParameter>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
