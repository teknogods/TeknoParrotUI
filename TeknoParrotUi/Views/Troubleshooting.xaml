<?xml version="1.0" encoding="UTF-8" ?>
<UserControl x:Class="TeknoParrotUi.Views.Troubleshooting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:TeknoParrotUi.Properties"
             d:DesignHeight="580"
             d:DesignWidth="800"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="pack://application:,,,/Resources/#Inter"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             mc:Ignorable="d">
    <Grid Margin="5, 10, 5, 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="{x:Static p:Resources.Troubleshooting}"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Grid.Column="0"
                   Margin="0, 5, 0 ,0"
                   Grid.Row="0" />
        <TextBlock Text="Please include the following information when reporting bugs and issues in the discord, thank you!"
                   FontSize="18"
				   Grid.Column="0"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap"
                   Margin="10, 0, 10, 0" />
        <TextBox Name="TextBoxSystemInfo"
                 Text="Obtaining System Information..."
				 FontFamily="Consolas"
                 Grid.Column="0"
                 Margin="10,10,10,10"
                 Grid.Row="2"
				 BorderThickness="2"
				 BorderBrush="{DynamicResource MaterialDesignDivider}"
				 Padding="10, 10, 10, 10"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True"
                 IsReadOnly="True" />
        <Grid Grid.Row="3"
              Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Name="ButtonCopyToClipboard"
                    Content="{x:Static p:Resources.CopyInfoToClipboard}"
                    Grid.Column="0"
                    VerticalAlignment="Top"
                    Style="{StaticResource MaterialDesignRaisedButton}" 
					Click="BtnCopyToClipboard"/>
            <Button Name="ButtonSaveToFile"
                    Content="{x:Static p:Resources.SaveInfoToTextFile}"
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    Style="{StaticResource MaterialDesignRaisedButton}" 
					Click="BtnSaveToFile"/>
        </Grid>
        <materialDesign:Snackbar x:Name="TroubleshootingSnackbar"
                                 Grid.Row="0"
                                 Grid.RowSpan="4"
                                 Margin="13,10,0,0"
                                 Panel.ZIndex="999" />
    </Grid>
</UserControl>