<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:TeknoParrotUi.Views"
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="800"
             x:Class="TeknoParrotUi.Views.Patreon">
    
    <Border Padding="20">
        <Grid HorizontalAlignment="Center" MaxWidth="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Header section -->
                <RowDefinition Height="Auto" /> <!-- Sponsor Information -->
                <RowDefinition Height="Auto" /> <!-- Key management section -->
                <RowDefinition Height="Auto" /> <!-- Status section -->
                <RowDefinition Height="*" />    <!-- Console section -->
            </Grid.RowDefinitions>
            
            <!-- Header with title -->
            <TextBlock Grid.Row="0"
                      Text="TeknoParrot Subscription Management"
                      FontSize="24" FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>
            
            <!-- Sponsor Information -->
            <StackPanel Grid.Row="1"
                       Spacing="15"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25">
                
                <TextBlock x:Name="BecomeAPatron"
                          Cursor="Hand"
                          FontSize="20"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Text="Become a TeknoParrot Sponsor!"
                          PointerPressed="PackIcon_MouseLeftButtonDown_1" />
                
                <TextBlock x:Name="PatronGameListButton"
                          Cursor="Hand"
                          FontSize="16"
                          HorizontalAlignment="Center"
                          Text="View Subscription Game List (123 games)"
                          PointerPressed="TextBlock_MouseLeftButtonDown" />
            </StackPanel>
            
            <!-- Key Management -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" 
                           Spacing="15" 
                           HorizontalAlignment="Center">
                    
                    <TextBlock Text="Subscription Key:" 
                             FontSize="16"
                             HorizontalAlignment="Left"
                             Margin="0,10,0,0"/>
                    
                    <TextBox x:Name="patreonKey"
                            Width="264"
                            Height="40"
                            TextWrapping="Wrap" />
                </StackPanel>
                
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           Spacing="15" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <Button x:Name="buttonRegister"
                           Width="130"
                           Height="45"
                           Click="ButtonRegister_Click"
                           Content="Register Key" />
                           
                    <Button x:Name="buttonDereg"
                           Width="130"
                           Height="45"
                           Click="ButtonDereg_Click"
                           Content="Deregister Key" />
                </StackPanel>
            </Grid>
            
            <!-- Status Section -->
            <StackPanel Grid.Row="3" 
                       Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10">
                <TextBlock Text="Status:" 
                         FontSize="16"
                         FontWeight="SemiBold"
                         Margin="0,0,10,0"/>
                <TextBlock x:Name="statusText" 
                         FontSize="16" 
                         Text="Not registered"/>
            </StackPanel>
            
            <!-- Console Output -->
            <Border Grid.Row="4"
                   BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                   BorderThickness="1"
                   CornerRadius="4"
                   Margin="0,10,0,0">
                <ListBox x:Name="listBoxConsole"
                        Height="300"
                        Margin="5"/>
            </Border>
        </Grid>
    </Border>
</UserControl>