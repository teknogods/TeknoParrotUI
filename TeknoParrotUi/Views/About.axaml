<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:TeknoParrotUi.Views"
             xmlns:p="using:TeknoParrotUi.Properties"
             mc:Ignorable="d" d:DesignHeight="580" d:DesignWidth="800"
             x:Class="TeknoParrotUi.Views.About">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" MaxWidth="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Title and Version -->
        <StackPanel Grid.Row="0" 
                   Margin="0,20,0,10"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Orientation="Vertical">
            <TextBlock Text="TeknoParrot UI"
                      HorizontalAlignment="Center"
                      FontSize="48"
                      FontWeight="Bold" />
            <TextBlock x:Name="versionText"
                      HorizontalAlignment="Center"
                      FontSize="24"
                      Margin="0,5,0,0"
                      Text="X.XX" />
        </StackPanel>
        
        <!-- Credits Label -->
        <Border Grid.Row="1"
               BorderBrush="{DynamicResource SystemAccentColor}"
               BorderThickness="0,1,0,1"
               Margin="0,10,0,10"
               Padding="10">
            <TextBlock HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     FontSize="16"
                     Text="{x:Static p:Resources.AboutCredits}" />
        </Border>
        
        <!-- Social Icons -->
        <StackPanel Grid.Row="2"
                   Margin="0,20,0,20"
                   HorizontalAlignment="Center"
                   Orientation="Horizontal"
                   Spacing="20">
            <!-- Discord -->
            <Button Width="70" 
                   Height="70" 
                   Padding="10"
                   Cursor="Hand"
                   Classes="Accent"
                   Click="Discord_Click">
                <PathIcon Data="{StaticResource DiscordIcon}" Width="40" Height="40" />
                <ToolTip.Tip>Discord</ToolTip.Tip>
            </Button>
            
            <!-- Website -->
            <Button Width="70" 
                   Height="70" 
                   Padding="10"
                   Cursor="Hand"
                   Classes="Accent"
                   Click="Website_Click">
                <PathIcon Data="{StaticResource WebIcon}" Width="40" Height="40" />
                <ToolTip.Tip>Website</ToolTip.Tip>
            </Button>
            
            <!-- GitHub -->
            <Button Width="70" 
                   Height="70" 
                   Padding="10"
                   Cursor="Hand"
                   Classes="Accent"
                   Click="GitHub_Click">
                <PathIcon Data="{StaticResource GitHubIcon}" Width="40" Height="40" />
                <ToolTip.Tip>GitHub</ToolTip.Tip>
            </Button>
        </StackPanel>
        
        <!-- Components List -->
        <Border Grid.Row="3"
               Margin="0,10,0,20"
               BorderBrush="{DynamicResource SystemBaseLowColor}"
               BorderThickness="1"
               CornerRadius="4"
               Padding="10">
            <ScrollViewer>
                <ListBox x:Name="components" 
                        Background="Transparent"
                        BorderThickness="0" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>