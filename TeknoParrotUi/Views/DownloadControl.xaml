<UserControl x:Class="TeknoParrotUi.Views.DownloadControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeknoParrotUi"
        mc:Ignorable="d" 
        BorderThickness="0" 
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        Height="90" Width="650" Loaded="UserControl_Loaded">
    <Grid Margin="0,0,0,0">
        <ProgressBar  x:Name="progressBar" Margin="0,39,0,21" HorizontalAlignment="Left" Width="650"/>
        <TextBlock x:Name="statusText" Text="Downloading..." FontSize="18" Margin="0,0,0,56" HorizontalAlignment="Left" Width="640"/>
    </Grid>
</UserControl>