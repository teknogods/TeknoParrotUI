<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="using:TeknoParrotUi.UserControls"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="800"
             x:Class="TeknoParrotUi.UserControls.NetworkAdapterDropdown"
             xmlns:usercontrols="using:TeknoParrotUi.UserControls"
             x:DataType="usercontrols:NetworkAdapterDropdown">
    <Grid>
        <ComboBox x:Name="comboBox"
                ItemsSource="{Binding foundAdapters}"
                SelectedItem="{Binding SelectedAdapter}">
            <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="usercontrols:NetworkAdapterItem">
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>